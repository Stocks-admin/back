generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model symbols {
  symbol     String   @id
  full_name  String?
  logo       String?
  last_price Float
  updated_at DateTime @default(now())
}

model iol_token {
  token_id      Int      @id @default(autoincrement())
  access_token  String
  refresh_token String
  created_at    DateTime @default(now())
  expires_at    DateTime
}

model transactions {
  transaction_id   Int              @id @default(autoincrement())
  user_id          Int
  transaction_type Transaction_type
  symbol           String?
  symbol_price     Float?
  amount_sold      Float
  transaction_date DateTime         @default(now())
}

model user {
  user_id  Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model user_portfolio {
  user_id    Int
  symbol     String
  amount     Float
  updated_at DateTime

  @@id([user_id, symbol])
}

model user_wallet {
  user_id    Int      @id
  amount     Float
  updated_at DateTime
}

view user_portfolio_updates {
  user_id Int
  symbol  String
  amount  Float?

  @@id([user_id, symbol])
}

view user_wallet_updates {
  user_id Int    @id
  amount  Float?
}

enum Transaction_type {
  buy
  sell
  deposit
  withdraw
}

model refresh_token {
  id          String   @id @unique @default(uuid())
  hashedToken String
  user_id     Int
  revoked     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([user_id], map: "user_id")
}
