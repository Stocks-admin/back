files:
  "/etc/cron.d/mycron":
    mode: "000644"
    owner: root
    group: root
    content: |
      0 0 22 ? * SUN * root /usr/local/bin/myscript.sh

  "/usr/local/bin/myscript.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      export $(cat /opt/elasticbeanstalk/deployment/env | xargs)
      cd /var/app/current/
      npx prisma generate

      node ./cronJobs/generateSnapshots.js

      # Registra la fecha y hora actual en un archivo temporal
      date > /tmp/date

      # Puedes agregar más comandos aquí para el contenido real del script

      exit 0

commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/mycron.bak"
